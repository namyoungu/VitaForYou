<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/bottom_setting2" />

        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="알람 설정"
            android:textSize="45dp"
            android:textStyle="bold"
            android:textColor="@color/colorMain"/>

    </GridLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@color/colorMain" />

    <EditText android:id="@+id/edit_alarmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:hint="Alarm Name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorMain"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="6"
        android:rowCount="3"
        android:layout_margin="10dp"
        android:useDefaultMargins="true">

        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:padding="10dp"
            android:text="아침"
            android:textSize="30dp"
            android:textColor="@color/colorMain"/>

        <EditText android:id="@+id/edit_morningAlarm"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:padding="10dp"
            android:hint="시간 입력"
            android:textSize="30dp"
            android:textColor="@color/gray" />

        <Button android:id="@+id/bt_morningAlRmv"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:padding="10dp"
            android:text="해제"
            android:textSize="30dp"
            android:textColor="@color/colorMain"
            android:background="@color/colorButton"/>

    <TextView
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:padding="10dp"
        android:text="점심"
        android:textSize="30dp"
        android:textColor="@color/colorMain"/>

        <EditText
            android:id="@+id/edit_lunchAlarm"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:padding="10dp"
            android:hint="시간 입력"
            android:textColor="@color/gray"
            android:textSize="30dp" />

        <Button android:id="@+id/bt_lunchAlRmv"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:padding="10dp"
            android:text="해제"
            android:textSize="30dp"
            android:textColor="@color/colorMain"
            android:background="@color/colorButton"/>

    <TextView
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal"
        android:padding="10dp"
        android:text="저녁"
        android:textSize="30dp"
        android:textColor="@color/colorMain"/>

        <EditText android:id="@+id/edit_dinnerAlarm"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:padding="10dp"
            android:hint="시간 입력"
            android:textSize="30dp"
            android:textColor="@color/gray" />

        <Button android:id="@+id/bt_dinnerAlRmv"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:padding="10dp"
            android:text="해제"
            android:textSize="30dp"
            android:textColor="@color/colorMain"
            android:background="@color/colorButton"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:useDefaultMargins="true">

        <Button android:id="@+id/bt_saveAlarm"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:text="알림 저장"
            android:textSize="30dp"
            android:textColor="@color/colorMain"
            android:background="@color/colorButton" />

        <Button android:id="@+id/bt_deleteAlarm"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:text="알림 초기화"
            android:textSize="30dp"
            android:textColor="@color/colorMain"
            android:background="@color/colorButton"/>

    </GridLayout>


</LinearLayout>